root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2 # using spaces but just in case
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{ts,tsx,js,jsx,html,css,scss}]
indent_size = 2
quote_type = single
ij_typescript_use_double_quotes = false

[server/**.py]
indent_style = space
indent_size = 4 # industry standard for python
tab_width = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
